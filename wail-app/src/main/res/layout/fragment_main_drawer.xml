<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="?navigationDrawer">

        <LinearLayout
            android:id="@+id/main_drawer_main_item"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/NavigationDrawerCategoryContainer">

            <com.artemzin.android.wail.ui.TypefaceTextView
                android:id="@+id/main_drawer_item_text_view"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/drawer_main"
                app:typefaceFromAssets="fonts/Roboto-Light.ttf"
                style="?navigationDrawerCategoryTextView"/>

        </LinearLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/dark_theme_navigation_drawer_divider_line"/>

        <LinearLayout
            android:id="@+id/main_drawer_tracks_item"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/NavigationDrawerCategoryContainer">

            <com.artemzin.android.wail.ui.TypefaceTextView
                android:id="@id/main_drawer_item_text_view"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/drawer_tracks"
                app:typefaceFromAssets="fonts/Roboto-Light.ttf"
                style="?navigationDrawerCategoryTextView"/>

        </LinearLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/dark_theme_navigation_drawer_divider_line"/>

        <LinearLayout
            android:id="@+id/main_drawer_settings_item"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/NavigationDrawerCategoryContainer">

            <com.artemzin.android.wail.ui.TypefaceTextView
                android:id="@id/main_drawer_item_text_view"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/drawer_settings"
                app:typefaceFromAssets="fonts/Roboto-Light.ttf"
                style="?navigationDrawerCategoryTextView"/>

        </LinearLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/dark_theme_navigation_drawer_divider_line"/>

    </LinearLayout>

</ScrollView>