<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/appwidget_bg"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:showDividers="none"
              android:baselineAligned="false"
              android:gravity="fill">
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/widget_love_current_track_button"
            android:src="@drawable/ic_main_love_track"
            android:visibility="visible"
            android:baselineAlignBottom="false"
            android:clickable="true"
            android:cropToPadding="false"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:scaleType="center"
            android:adjustViewBounds="false"
            android:layout_weight="20"
            android:tint="@color/accent_material_light"
            android:layout_gravity="center" android:background="@null"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/widget_infobox_layout"
            android:layout_weight="80"
            android:showDividers="none">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/widget_infobox_track_text"
                android:layout_weight="50"
                android:textColor="@color/accent_material_light"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="left|bottom"
                />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/widget_infobox_artist_text"
                android:layout_weight="50"
                android:textColor="@color/accent_material_light"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="top|left"
                />
    </LinearLayout>
</LinearLayout>