<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionBarDark" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">#505050</item>
        <item name="android:titleTextStyle">@style/ActionBarLight.Title</item>
    </style>

    <style name="ActionBarLight.Title" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fbfbfb</item>
    </style>

    <style name="NavigationDrawerCategoryContainer">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DialogButton" parent="@android:style/Widget.Holo.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SettingsCategoryTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/settings_item_padding_top_and_bottom</item>
        <item name="android:paddingBottom">@dimen/settings_item_padding_top_and_bottom</item>
        <item name="android:paddingLeft">@dimen/settings_item_padding_left_and_right</item>
        <item name="android:paddingRight">@dimen/settings_item_padding_left_and_right</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsCategoryTitleTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/settings_padding_right_and_left</item>
        <item name="android:paddingRight">@dimen/settings_padding_right_and_left</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SettingsCategoryTitleDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="SettingsItem">
        <item name="android:clickable">true</item>
        <item name="android:background">@color/background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/settings_padding_right_and_left</item>
        <item name="android:paddingRight">@dimen/settings_padding_right_and_left</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/settings_item_padding_top_and_bottom</item>
        <item name="android:paddingBottom">@dimen/settings_item_padding_top_and_bottom</item>
    </style>

    <style name="SettingsItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/settings_item_title</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SettingsItemDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/settings_item_desc</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="SettingsItem.WithSwitch">
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingsItemTitle.WithSwitch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsItemSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>